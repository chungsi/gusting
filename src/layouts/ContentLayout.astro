---
import logoSvg from '@assets/images/svg/logo.svg?raw'
import Seo from '@components/Seo.astro'
import clsx from 'clsx'

import BaseLayout from './BaseLayout.astro'

type Props = {
  bodyClass?: string
  class?: string
}

const { bodyClass, class: className }: Props = Astro.props
---

<BaseLayout
  bodyClass={clsx('border-th-primary border-b-8 border-solid', bodyClass)}
  class:list={[
    'pb-2xl pt-4xl @container relative mx-auto px-[var(--spacing-container-offset)] [contain:layout]',
    className,
  ]}
>
  <slot
    name='seo'
    slot='seo'
  >
    <Seo />
  </slot>

  <div
    class:list={[
      'top-lg fixed left-0 z-50 pl-0 md:pl-2',
      'lg:ml-[calc(var(--spacing-container-offset)_/_2)] lg:-translate-x-1/3',
    ]}
  >
    <a
      data-logo
      href='/'
      class:list={['block w-2xl max-w-[42rem] min-w-[var(--spacing-xl)]']}
    >
      <Fragment set:html={logoSvg} />
    </a>
  </div>
  <slot name='header' />

  <slot />
</BaseLayout>

<script>
  // Use event listener's on Astro's page-loading to properly rerun scripts
  // when using View Transitions
  document.addEventListener('astro:after-swap', () => {
    const logo = document.querySelector('[data-logo]')
    const urlParams = new URL(document.location.href).searchParams

    // Set the logo link to point to the correct home page
    // NOTE: Set the /design home to just be / (index)
    // if (urlParams.get('home') === 'design') {
    //   logo?.setAttribute('href', '/design')
    // } else
    if (urlParams.get('home') === 'art') {
      logo?.setAttribute('href', '/art')
    }
  })
</script>
