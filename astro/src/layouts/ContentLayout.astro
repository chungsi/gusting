---
import logoSvg from '@assets/images/svg/logo.svg?raw'
import clsx from 'clsx'
import BaseLayout from './BaseLayout.astro'

type Props = {
  bodyClass?: string
  class?: string
}

const { bodyClass, class: className }: Props = Astro.props

---

<BaseLayout
  bodyClass={clsx('border-b-8 border-solid border-th-primary', bodyClass)}
  class:list={[
    'pt-4xl pb-2xl px-[var(--space-container-offset)] mx-auto',
    className,
  ]}
>
  <a
    id='logo'
    href='/'
    class:list={[
      'fixed block z-50 top-lg pl-0 md:pl-2',
      'min-w-[var(--space-xl)] w-2xl max-w-2xl',
      '-ml-2 lg:-ml-[var(--space-container-offset)] xl:-ml-[calc(var(--space-container-offset)_/_1.6)]'
    ]}
  >
    <Fragment set:html={logoSvg} />
  </a>

  <slot name='header' />

  <slot />
</BaseLayout>

<script is:inline>
  // Inline to have the script run on page because ViewTransitions causes
  // some module loading interference...

  // Var because need to redefine variables as the script is rerun on load.
  var logo = document.getElementById('logo')
  var urlParams = new URL(document.location.href).searchParams

  // Set the logo link to point to the correct home page
  if (urlParams.get('home') === 'design') {
    logo?.setAttribute('href', '/design')
  } else if (urlParams.get('home') === 'art') {
    logo?.setAttribute('href', '/art')
  }
</script>