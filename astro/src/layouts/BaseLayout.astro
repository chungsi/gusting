---
interface Props {
  title?: string
  className?: string
  bodyClassName?: string
  id?: string
}

import '@css/global.css'
import { ViewTransitions } from 'astro:transitions'
import clsx from 'clsx'

const { title, className, bodyClassName, id } = Astro.props as Props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <!-- <title>{title}</title> -->
    <ViewTransitions />
  </head>
  <body
    class={clsx('text-th-text font-mono text-md font-normal', bodyClassName)}
  >
    <main class={className} id={id}>
      <!-- Slot here like in blade -->
      <slot />
    </main>
    <!-- Color overlay -->
    <span
      class='absolute w-full h-full top-0 left-0 bg-[#FFFAEB] mix-blend-multiply'
      aria-hidden></span>
  </body>
</html>
